<%- include('header'); -%>

    <div class="box" id="heading">
        <h1> <%= listTitle %></h1>
    </div>

    <div class="box">
            <% newItem.forEach((e) => { %>
                <form action="/delete" method="POST">
                    <div class="item">
                        <input type="checkbox" value="<%= e._id%>" class="checkbox" name="checkbox" onchange="this.form.submit()">
                        <p ><%= e.name %></p>
                        <input type="hidden" name="listName" value="<%= listTitle %>">
                    </div>
                </form>
            <% }) %>

         <form action="/" method="POST" autocomplete="on">
            <input  type="text" name="todo"  id="todo" placeholder="New Item" required>
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
    

  
  <%- include('footer'); -%>